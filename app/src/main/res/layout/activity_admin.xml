<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>

    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_admin_frame"
        android:padding="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            >
            <TextView
                android:text="个人中心"
                style="@style/AdminTitleTextStyle"
                android:gravity="center_vertical"

                />
            <TextView
                android:id="@+id/admin_esc"
                android:text="注销"
                style="@style/AdminButtonStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:background="@drawable/layout_admin_frame"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="20"
                    android:text="测试员 编号：00002"
                    style="@style/AdminTextStyle"
                    />
                <TextView
                    style="@style/AdminTextStyle"
                    android:layout_weight="1"
                    android:background="@drawable/layout_admin_line"
                    />
                <TextView
                    style="@style/AdminTextStyle"
                    android:layout_weight="20"
                    android:text="登录时间：00时08分"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <TextView
                android:text="系统设置"
                style="@style/AdminTitleTextStyle"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/admin_re"
                android:text="重置"
                style="@style/AdminButtonStyle"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:background="@drawable/layout_admin_frame"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:text="版本说明"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:src="@drawable/timg"
                    android:scaleType="centerCrop"
                    />

            </LinearLayout>
            <TextView
                style="@style/AdminTextStyle"
                android:layout_weight="1"
                android:text="中移物联演示系统"
                />
            <TextView
                android:layout_weight="1"
                android:text="Ver：1.0"
                style="@style/AdminTextStyle" />
        </LinearLayout>
        <TextView
            android:id="@+id/admin_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/layout_admin_but_frame"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            >

        </TextView>
    </LinearLayout>

</layout>